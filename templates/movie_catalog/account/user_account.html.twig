{% extends "base.html.twig" %}

{% block title %}| Paramètres{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

<!-- MainContent -->
<section class="m-profile setting-wrapper">        
    <div class="container">
        <h4 class="main-title mb-4">Paramètres du compte</h4>
        <div class="row">
            <div class="col-lg-4 mb-3">
                <div class="sign-user_card text-center">
                    <img src={{ asset('assets/movie_catalog_front_office/images/user/user.jpg') }} class="rounded-circle img-fluid d-block mx-auto mb-3" alt="user">
                    <h4 class="mb-3">{{ user.fullName }}</h4>
                    <a href="#" class="edit-icon text-primary">Modifier</a>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="sign-user_card">
                    <h5 class="mb-3 pb-3 a-border">Détails personnels</h5>
                    <div class="row align-items-center justify-content-between mb-3">
                        <div class="col-md-8">
                            <span class="text-light font-size-13">Email</span>
                            <p class="mb-0">{{ user.email }}</p>
                        </div>   
                        <div class="col-md-4 text-md-right text-left">                      
                            <a href="#" class="text-primary">Changer</a>
                        </div>
                    </div>
                    <div class="row align-items-center justify-content-between mb-3">
                        <div class="col-md-8">
                            <span class="text-light font-size-13">Mot de passe</span>
                            <p class="mb-0">**********</p>
                        </div>
                        <div class="col-md-4 text-md-right text-left">
                            <a href="#" class="text-primary">Changer</a>
                        </div>
                    </div>
                    <h5 class="mb-3 mt-4 pb-3 a-border">Détails des factures</h5>
                    <div class="row justify-content-between mb-3">
                        <div class="col-md-8 r-mb-15">
                            <p>Votre prochaine date de facturation est le ...19 September 2020....</p>
                            <a href="#" class="btn btn-hover">Annuler l'abonnement</a>
                        </div>
                        <div class="col-md-4 text-md-right text-left">
                            <a href="#" class="text-primary">Mettre à jour les informations de paiement</a>
                        </div>
                    </div>
                    {# <h5 class="mb-3 mt-4 pb-3 a-border">Détails de l'abonnement</h5>
                    <div class="row justify-content-between mb-3">
                        <div class="col-md-8">
                            <p>Premium</p>                                
                        </div>
                        <div class="col-md-4 text-md-right text-left">
                            <a href="pricing-plan.html" class="text-primary">Changer d'abonnement</a>
                        </div>
                    </div> #}
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}

{% block javascripts %}{% endblock %}